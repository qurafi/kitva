{
	"name": "kitva",
	"version": "1.0.0-next.15",
	"description": "Validation kit for SvelteKit",
	"keywords": [
		"svelte",
		"sveltekit",
		"validation",
		"forms",
		"form-validation",
		"vite-plugin",
		"jsonschema"
	],
	"repository": "https://github.com/qurafi/kitva",
	"bugs": "https://github.com/qurafi/kitva/issues",
	"author": "Mohammed Al-Qurafi <mohammedqurafi@gmail.com> (https://github.com/qurafi/)",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": "./dist/cli/bin.js",
	"scripts": {
		"test:e2e": "DEBUG_COLORS=1 pnpm -r test",
		"test:spec": "DEBUG_COLORS=1 pnpm vitest",
		"test": "export CI=true && pnpm run '/^test:/'",
		"dev": "svelte-package -w",
		"build": "svelte-package",
		"preview": "vite preview",
		"package": "svelte-kit sync && pnpm build && publint",
		"prepublishOnly": "npm run package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"tscheck": "tsc --noEmit"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/vite/index.d.ts",
			"default": "./dist/vite/index.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"default": "./dist/server.js"
		},
		"./ambient": {
			"types": "./ambient.d.ts"
		}
	},
	"typesVersions": {
		"*": {
			"types": [
				"./dist/types.d.ts"
			],
			"vite": [
				"./dist/vite/index.d.ts"
			],
			"server": [
				"./dist/server.d.ts"
			]
		}
	},
	"files": [
		"dist",
		"src/lib",
		"ambient.d.ts",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!src/**/*.test.*",
		"!src/**/*.spec.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^1.5.0",
		"svelte": "^4.1.0"
	},
	"devDependencies": {
		"@sinclair/typebox": "^0.28.14",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/package": "^2.0.0",
		"@types/debug": "^4.1.8",
		"@types/node": "^20.2.5",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"ajv": "^8.12.0",
		"ajv-formats": "^3.0.0-rc.0",
		"create-svelte": "^4.2.0",
		"eslint": "^8.43.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"esm-env": "^1.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"publint": "^0.1.9",
		"svelte": "^4.1.2",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"undici": "^5.22.1",
		"vite": "^4.3.0",
		"vitest": "^0.33.0",
		"zod": "^3.21.4"
	},
	"dependencies": {
		"ajv-build-tools": "1.0.0-next.6",
		"ajv-i18n": "^4.2.0",
		"debug": "^4.3.4",
		"json-schema-to-typescript": "^13.0.1",
		"jsonc-parser": "^3.2.0",
		"kleur": "^4.1.5",
		"rfdc": "^1.3.0",
		"zod-to-json-schema": "^3.21.2"
	},
	"pnpm": {
		"overrides": {
			"ajv-build-tools": "../ajv-build-tools"
		}
	}
}
