{
	"name": "kitva",
	"version": "1.0.0-next.15",
	"description": "Validation kit for SvelteKit",
	"keywords": [
		"svelte",
		"sveltekit",
		"validation",
		"forms",
		"form-validation",
		"vite-plugin",
		"jsonschema"
	],
	"repository": "https://github.com/qurafi/kitva",
	"bugs": "https://github.com/qurafi/kitva/issues",
	"author": "Mohammed Al-Qurafi <mohammedqurafi@gmail.com> (https://github.com/qurafi/)",
	"license": "MIT",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": "./dist/cli/bin.js",
	"scripts": {
		"test:e2e": "pnpm -r test",
		"test:spec": "vitest",
		"test:cli": "vitest run tests/cli/setup",
		"test": "export CI=true && pnpm run '/^test:/'",
		"dev": "svelte-package -w",
		"build": "svelte-package",
		"preview": "vite preview",
		"package": "svelte-kit sync && pnpm build && publint",
		"prepublishOnly": "npm run package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"tscheck": "tsc --noEmit"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./vite": {
			"types": "./dist/vite/index.d.ts",
			"default": "./dist/vite/index.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"default": "./dist/server.js"
		},
		"./ambient": {
			"types": "./ambient.d.ts"
		},
		"./types": {
			"types": "./dist/types.d.ts"
		},
		"./generated": {
			"default": "./dist/generated.js",
			"types": "./dist/generated.d.ts"
		}
	},
	"files": [
		"dist",
		"src/lib",
		"src/templates",
		"ambient.d.ts",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!src/**/*.test.*",
		"!src/**/*.spec.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@sinclair/typebox": "^0.28.20",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/package": "^2.2.7",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/debug": "^4.1.12",
		"@types/node": "^20.11.24",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"ajv": "^8.12.0",
		"ajv-formats": "3.0.0-rc.0",
		"create-svelte": "^6.0.9",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-svelte": "^2.35.1",
		"esm-env": "^1.0.0",
		"prettier-plugin-svelte": "^2.10.1",
		"publint": "^0.1.16",
		"svelte-check": "^3.6.6",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"undici": "^6.7.0",
		"vite": "^5.1.4",
		"vitest": "^1.3.1",
		"zod": "^3.22.4"
	},
	"dependencies": {
		"prettier": "^2.8.8",
		"ajv-build-tools": "1.0.0-next.6",
		"ajv-i18n": "^4.2.0",
		"debug": "^4.3.4",
		"json-schema-to-typescript": "^13.1.2",
		"jsonc-parser": "^3.2.1",
		"kleur": "^4.1.5",
		"rfdc": "^1.3.1",
		"zod-to-json-schema": "^3.22.4"
	},
	"pnpm": {
		"overrides": {
			"ajv-build-tools": "../ajv-build-tools"
		}
	}
}
