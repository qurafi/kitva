{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "nodenext",
		"module": "ESNext",
		"target": "ES2022",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"declarationMap": true,
		"allowJs": true,
		"checkJs": true,
		"outDir": "./dist",
		"rootDir": "src"
	},
	"include": ["src", "ambient.d.ts"],
	"exclude": ["dist", "fixtures/", "src/**/tests/fixtures"]
}
